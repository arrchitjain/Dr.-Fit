<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.caloriecounter.CaloriecounterFragment">


    <RelativeLayout
        android:id="@+id/caltoplayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#2196F3"
        >

        <TextView
            android:id="@+id/calhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:text="Calorie Counter"
            android:textSize="40dp"
            android:textColor="#2196F3"
            android:background="@drawable/headstyle"
            />

    </RelativeLayout>





    <androidx.cardview.widget.CardView
        android:id="@+id/calwtcrdview"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        >

        <EditText
            android:id="@+id/calwt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:hint="65 (in Kgs)"
            android:textColor="#2196F3"
            />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/calreset"
        android:layout_below="@id/calhead"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/headstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Reset"
        android:textColor="#2196F3"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/caltimecrdview"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="260dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        >

        <EditText
            android:id="@+id/caltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:hint="30 (in min)"
            android:textColor="#2196F3"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/calinfocrdview"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        >

        <TextView
            android:id="@+id/calinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Select the Exercise below to know your burnt calories"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/calresultcrdview"
        android:layout_below="@id/calinfocrdview"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        >

        <TextView
            android:id="@+id/calresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:hint="You have burnt ... Calories"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calexerxizecrdview"
        android:layout_below="@id/calresultcrdview"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="#2196F3"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/calcycling"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/calresultcrdview"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            />


        <ImageButton
            android:id="@+id/calwalking"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/calresultcrdview"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="195dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            />

        <ImageButton
            android:id="@+id/calswimming"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/calcycling"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            />


        <ImageButton
            android:id="@+id/caljogging"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/calcycling"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="195dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            />


            </RelativeLayout>

</ScrollView>



    </androidx.cardview.widget.CardView>





</RelativeLayout>